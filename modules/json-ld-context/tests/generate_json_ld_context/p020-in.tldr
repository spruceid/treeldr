base <http://www.example.com/>;
use <http://www.w3.org/2000/01/rdf-schema#> as rdfs;
use <http://www.example.com/> as ex;

type Foo {
	ex:prop: required single multiple rdfs:Resource
}

layout FooLayout {
	ex:prop: required single multiple Prop
}

type Bar = (Foo with FooLayout)
	& all ex:prop as prop: (rdfs:Resource with Prop);

layout Prop for rdfs:Resource = (&rdfs:Resource as Ref) | rdfs:Resource;